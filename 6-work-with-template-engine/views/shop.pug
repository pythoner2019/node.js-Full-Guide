extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")


block content
    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        div.card__image
                            img(src="https://www.asme.org/getmedia/c2c8ea5a-b690-4ba7-92bb-34bd1432862b/book_guide_hero_books.aspx", alt="A Book")
                        div.card__content
                            h2.product__price 19.9$
                            p.product__description A very interesting book about so many even more interesting things!
                        .card__actions
                            button.btn Add to Cart

        else
            h1 No Products!
